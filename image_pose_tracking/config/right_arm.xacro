<?xml version="1.0"?>  
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="right_arm">
  <xacro:arg name="prefix" default="arm"/>
  <xacro:arg name="color_rgba" default="0.1 0.1 0.1 1"/>
  <!-- <xacro:macro name= "right_arm" params="prefix color_rgba"> -->

  <material name="${prefix}_color">
    <color rgba="${color_rgba}"/>
  </material>

  <link name="camera_depth_optical_frame"/>

  <joint name="${prefix}_world_to_shoulder" type="fixed">
    <parent link="camera_depth_optical_frame"/>
    <child link="${prefix}_RightShoulder"/>
    <origin xyz="-0.05723638 -0.11301016  1.0710001" rpy="3.14 1.57 0"/>
  </joint>

  <link name="${prefix}_RightShoulder">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="${prefix}_color"/>
    </visual>
  </link>

  <joint name="${prefix}_jRightShoulder_rotx" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="${prefix}_RightShoulder"/>
    <child link="${prefix}_RightUpperArm_f1"/>
    <axis xyz="1 0 0"/>
    <dynamics damping="0.1" friction="0.0"/>
    <limit effort="30" velocity="1.0" lower="-2.35619" upper="1.5708"/>
  </joint>

  <link name="${prefix}_RightUpperArm_f1">
    <inertial>
      <mass value="0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0" iyy="0" izz="0" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="${prefix}_jRightShoulder_rotz" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="${prefix}_RightUpperArm_f1"/>
    <child link="${prefix}_RightUpperArm_f2"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.0"/>
    <limit effort="30" velocity="1.0" lower="-0.785398" upper="3.14159"/>
  </joint>

  <link name="${prefix}_RightUpperArm_f2">
    <inertial>
      <mass value="0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0" iyy="0" izz="0" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="${prefix}_jRightShoulder_roty" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="${prefix}_RightUpperArm_f2"/>
    <child link="${prefix}_RightUpperArm"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1" friction="0.0"/>
    <limit effort="30" velocity="1.0" lower="-1.5708" upper="1.5708"/>
  </joint>

  <link name="${prefix}_RightUpperArm">
    <inertial>
      <mass value="2.181"/>
      <origin xyz="0 -0.16437 0" rpy="0 0 0"/>
      <inertia ixx="0.020332" iyy="0.0013806" izz="0.020332" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 -0.16437 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.035581"/>
      </geometry>
      <material name="${prefix}_color"/>
    </visual>
    <collision>
      <origin xyz="0 -0.16437 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.24" radius="0.035581"/>
      </geometry>
    </collision>
  </link>

  <joint name="${prefix}_jRightElbow_rotz" type="revolute">
    <origin xyz="0 -0.24 0" rpy="0 0 0"/>
    <parent link="${prefix}_RightUpperArm"/>
    <child link="${prefix}_RightForeArm"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.0"/>
    <limit effort="30" velocity="1.0" lower="0" upper="2.53073"/>
  </joint>

  <link name="${prefix}_RightForeArm">
    <inertial>
      <mass value="1.454"/>
      <origin xyz="0 -0.135 0" rpy="0 0 0"/>
      <inertia ixx="0.008948" iyy="0.00040906" izz="0.008948" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 -0.135 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.27" radius="0.023721"/>
      </geometry>
      <material name="${prefix}_color"/>
    </visual>
    <collision>
      <origin xyz="0 -0.135 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.27" radius="0.023721"/>
      </geometry>
    </collision>
  </link>

  <joint name="${prefix}_jRightElbow_roty" type="revolute">
    <origin xyz="0 -0.27 0" rpy="0 0 0"/>
    <parent link="${prefix}_RightForeArm"/>
    <child link="${prefix}_RightForeArm_f1"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1" friction="0.0"/>
    <limit effort="30" velocity="1.0" lower="-1.5708" upper="1.48353"/>
  </joint>

  <link name="${prefix}_RightForeArm_f1">
    <inertial>
      <mass value="0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0" iyy="0" izz="0" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="${prefix}_jRightWrist_rotx" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="${prefix}_RightForeArm_f1"/>
    <child link="${prefix}_RightHand_f1"/>
    <axis xyz="1 0 0"/>
    <dynamics damping="0.1" friction="0.0"/>
    <limit effort="30" velocity="1.0" lower="-0.872665" upper="1.0472"/>
  </joint>

  <link name="${prefix}_RightHand_f1">
    <inertial>
      <mass value="0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0" iyy="0" izz="0" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="${prefix}_jRightWrist_rotz" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="${prefix}_RightHand_f1"/>
    <child link="${prefix}_RightHand"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.0"/>
    <limit effort="30" velocity="1.0" lower="-0.523599" upper="0.349066"/>
  </joint>

  <link name="${prefix}_RightHand">
    <inertial>
      <mass value="0.4362"/>
      <origin xyz="0 -0.05 0" rpy="0 0 0"/>
      <inertia ixx="0.0015471" iyy="0.00073303" izz="0.0021165" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 -0.05 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.133 0.133"/>
      </geometry>
      <material name="${prefix}_color"/>
    </visual>
    <collision>
      <origin xyz="0 -0.05 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.133 0.133"/>
      </geometry>
    </collision>
  </link>
<!-- </xacro:macro> -->
<!-- <xacro:right_arm prefix="arm" color_rgba="1 0 0 1"/> -->
</robot>
